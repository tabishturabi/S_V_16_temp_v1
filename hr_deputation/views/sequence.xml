<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for deputations requests -->
        <record id="seq_deptuation_requests" model="ir.sequence">
            <field name="name">Deputation Request</field>
            <field name="code">hr.deputations</field>
            <field name="prefix">BT/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for tickets  -->
        <record id="seq_tickets" model="ir.sequence">
            <field name="name">Tickets</field>
            <field name="code">hr.ticketing</field>
            <field name="prefix">TIKET/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>



    </data>
</odoo>

