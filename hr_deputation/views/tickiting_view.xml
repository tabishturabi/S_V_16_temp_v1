<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="hr_ticketing_form" model="ir.ui.view">
            <field name="name">hr_ticketing.form</field>
            <field name="model">hr.ticketing</field>
            <field name="arch" type="xml">
                <form edit="1">
                     <header>
                    <button name="action_confirm" groups="hr_deputation.group_deputation_manager"  string="Confirm" attrs="{'invisible': [('state', '!=', 'draft')]}"  type="object" class="oe_highlight" />
                    <button name="action_approve" groups="hr_deputation.group_deputation_manager" attrs="{'invisible': [('state', '!=', 'confirm')]}" string="Approve"  type="object" class="oe_highlight" />
                    <button name="action_cancel" groups="hr_deputation.group_deputation_manager" attrs="{'invisible': [('state', '!=', 'draft')]}" string="Cancel"  type="object" class="oe_highlight" />
                    <button name="action_create_bill" groups="hr.group_hr_user"  string="Create Bill" type="object" class="oe_highlight"  attrs="{'invisible': ['|',('state', '!=', 'approve'),('payment_created','=',True)]}"/>
                    <button name="action_draft" string="Reset To Draft"  type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'draft')]}" groups="hr_deputation.group_deputation_manager" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,cancel"/>

                   </header>
                    <sheet>

                        <div attrs="{'invisible': [('payment_created', '=', False)]}" class="oe_button_box" name="button_box">
                            <button name="action_bill_view"
                                class="oe_stat_button"
                                string="invoice"
                                icon="fa-file-text-o"
                                type="object">
                            </button>
                        </div>
                    
                        <group>
                            <group>
                                <field name="employee_id" required="1" />
                                <field name="ticket_type" required="1" />                    
                                <field name="partner_id" attrs="{'required':[('state','=','approve')],'invisible':[('state','!=','approve')]}" />                    
                                <field name="cost" required="1" />
                                <field name="payment_created" invisible="1" />                    
                            </group>
                            <group>
                          
                                <field name="from_date"  required="1"  />
                                <field name="to_date"  required="1" />
                                <field name="company_id" invisible="1" />
                            </group>
                        </group>
                  
                     
                    </sheet>
                         <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                 </div>

                </form>
            </field>
        </record>


        <record id="hr_ticketing_tree" model="ir.ui.view">
            <field name="name">hr_ticketing_tree.tree</field>
            <field name="model">hr.ticketing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="ticket_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="hr_ticketing_search" model="ir.ui.view">
            <field name="name">hr_ticketing.search</field>
            <field name="model">hr.ticketing</field>
            <field name="arch" type="xml">
                <search string="Ticketing">
                <field name="employee_id"/>

                <group expand="1" string="Group By">
                    <filter string="Employee" name="group_employee_id" context="{'group_by':'employee_id'}"/>

                </group>
                </search>
            </field>
        </record>
        

        <record id="act_hr_ticketing_view" model="ir.actions.act_window">
            <field name="name">Ticketing</field>
            <field name="res_model">hr.ticketing</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

<!--        <menuitem id="hr_ticketing_view_menu" groups="hr.group_hr_user"  parent="deputations_main_menu"-->
<!--                  action="act_hr_ticketing_view" name="Ticketing" />-->

    </data>
</odoo>
