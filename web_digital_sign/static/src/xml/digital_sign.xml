<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
   <t t-name="FieldSignature">
       <t t-if="widget.mode != 'readonly'">
           <div class="panel panel-default mt16 mb0 oe_edit_only" id="drawsign">
                <div class="panel-heading" style="line-height: 35.5px;font-size: 20px;">
                    <div class="pull-right">
                        <a id="sign_clean" class="btn btn-xs oe_edit_only" style="color: green;font-size: 18px;">Draw <i class="fa fa-pencil"/></a>
                        <a class="oe_edit_only save_sign"></a>
                    </div>
                    <strong>Your Signature</strong>
                </div>
                <div class="signature"/>
            </div>
       </t>
       <t t-if="widget.mode == 'readonly'">
           <div class="panel panel-default mt16 mb0 " id="drawsign">
                <div class="signature">
                </div>
            </div>
       </t>
    </t>
</templates>
