<odoo>
    <data>
        <record id="close_way_bill_wizard_view" model="ir.ui.view">
            <field name="name">close.way.bill.wizard.view</field>
            <field name="model">cancel.way.bill</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Cancel Way Bill">
                        <group>
                            <group>

                                <field name="reference" readonly="1"/>
                                <field name="way_bill_id" readonly="1"/>
                                <field name="bayan_reason_id" required="1"/>
                            </group>

                        </group>
                        <footer>
                            <button class="oe_highlight" name="action_cancel_waybill" type="object" string="Cancel WayBill"/>
                            <button class="oe_highlight" special="cancel" name="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
