<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>
    <data>
        <record id="sale_order_confirm_message_wizard_id" model="ir.ui.view">
            <field name="name">sale_order_confirm_message_wizard</field>
            <field name="model">sale.order.confirm.message</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <field name="order_id" invisible="1" />
                    <field name="message" />
                    <footer style="height: 30px !important; border: none !important;">
                        <button name="confirm_ok" type="object" string="OK" class = "oe_highlight" />
                        <button string="Cancel" special="cancel" class="btn-seconday"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>