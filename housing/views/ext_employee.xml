<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_inherit_view_view_employee_formform" model="ir.ui.view">
            <field name="name">hr.employee.form.house.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="employee_housing" type="object" class="oe_stat_button" icon="fa-h-square">
                        <field name="house_count" widget="statinfo" string="Housing"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>