                                groups="bsg_hr_employees_decisions.group_employees_decisions_by_manager"
                        />
                        <button name="%(bsg_hr_employees_decisions.employee_decisions_refusal_wizard)d" string="REFUSE"
                                type="action"
                                attrs="{'invisible':[('state','!=','submitted')]}"
                                class="oe_highlight oe_structure"
                                groups="bsg_hr_employees_decisions.group_employees_decisions_by_manager"
                        />
                        <!--            <button name="action_print_report" string="Print" type="object"-->
                        <!--                    attrs="{'invisible': [('state', '!=', 'approved')]}"-->
                        <!--                    class="oe_highlight oe_structure"-->
                        <!--            />-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"
                                       options="{'reload_on_button': true}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="sequence_number" style="color:#0e620a;"/>
                                <br/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="employee_id"/>
                                <field name="old_manager" force_save="1"/>
                                <field name="old_company" force_save="1"/>
                            </group>
                            <group>
                                <field name="old_branch_name" force_save="1"/>
                                <field name="old_emp_department" force_save="1"/>
                                <field name="old_job_position" force_save="1"/>
                                <field name="old_analytic_account" force_save="1"/>
                            </group>
                        </group>
                        <separator string="Salary Information" style="color:#0e620a;" colspan="4"/>
                        <group>
                            <group>
                                <field name="old_salary_structure" force_save="1"/>
                                <label for="old_wage"/>
                                <div class="o_row" name="old_wage">
                                    <field name="old_wage" nolabel="1" force_save="1"/>
                                    <span>/ month</span>
                                </div>
                                <label for="old_work_nature"/>
                                <div class="o_row" name="old_work_nature">
                                    <field name="old_work_nature" force_save="1"/>
                                    <span>/ month</span>
                                </div>
                                <label for="old_fixed_additional"/>
                                <div class="o_row" name="old_fixed_additional">
                                    <field name="old_fixed_additional" nolabel="1" force_save="1"/>
                                    <span>/ month</span>
                                </div>
                            </group>
                            <group>
                                <label for="old_food"/>
                                <div class="o_row" name="old_food">
                                    <field name="old_food" nolabel="1" force_save="1"/>
                                    <span>/ month</span>
                                </div>
                                <label for="old_fixed_deduction"/>
                                <div class="o_row" name="old_fixed_deduction">
                                    <field name="old_fixed_deduction" nolabel="1" force_save="1"/>
                                    <span>/ month</span>
                                </div>
                                <field name="currency_id" invisible="True"/>
                            </group>
                        </group>
                        <separator string="Employee Decision Information" style="color:#0e620a;" colspan="4"/>
                        <group>
                            <group>
                                <field name="decision_date" class="row"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="current_company" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="current_branch_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="current_emp_department" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <label for="from_date" string="From"
                                       attrs="{'invisible':[('decision_type','!=','assign_employee')]}"/>
                                <div class="o_row o_row_readonly"
                                     attrs="{'invisible':[('decision_type','!=','assign_employee')]}">
                                    <field name="from_date" class="oe_inline"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"></field>
                                    <span class="oe_inline">To</span>
                                    <field name="to_date" class="oe_inline"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"></field>
                                </div>
                            </group>
                            <group>
                                <field name="decision_type" invisible="1"/>
                                <field name="print_date" invisible="1"/>
                                <field name="current_job_position" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="current_manager"/>
                                <field name="current_analytic_account"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"></field>
                            <field name="decision_report_comments" domain="[('decision_type','=',decision_type)]"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"></field>
                        </group>
                        <notebook attrs="{'invisible': [('state', '!=','refused')]}">
                            <page string="Reason To Refuse">
                                <field name="refusal_reason"></field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"></field>
                        <field name="message_ids" widget="mail_thread"></field>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="employee_appointment_action">
            <field name="name">Decision to appoint an Employee</field>
            <field name="res_model">employees.appointment</field>
            <field name="domain">[('decision_type','=','appoint_employee')]</field>
            <field name="context">{'default_decision_type':'appoint_employee'}</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="employee_decision_action">
            <field name="name">Employee Decision</field>
            <field name="res_model">employees.appointment</field>
            <field name="domain">[]</field>
            <field name="context">{'default_decision_action_type':'employee_action'}</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="employee_transfer_action">
            <field name="name">Decision to transfer an Employee</field>
            <field name="res_model">employees.appointment</field>
            <field name="domain">[('decision_type','=','transfer_employee')]</field>
            <field name="context">{'default_decision_type':'transfer_employee'}</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="employee_assign_action">
            <field name="name">Decision to assign an Employee</field>
            <field name="res_model">employees.appointment</field>
            <field name="domain">[('decision_type','=','assign_employee')]</field>
            <field name="context">{'default_decision_type':'assign_employee'}</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>


        <record model="ir.actions.act_window" id="manager_approve_action">
            <field name="name">Decision to approve</field>
            <field name="res_model">employees.appointment</field>
            <field name="domain">[('state','=','submitted')]</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('employee_appointment_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('approve_employee_appointment_form_view')})]"/>

        </record>

        <!--    approve_employee_appointment_form_view-->


        <menuitem name="Decision to appoint an Employee"
                  id="menu_employee_appointment_decision"
                  parent="bsg_hr_employees_decisions.menu_decisions_root"
                  sequence="1"
                  action="employee_appointment_action"
                  groups="bsg_hr_employees_decisions.employees_decisions_appoint_group"/>
        <menuitem name="Employee Decision"
                  id="menu_employee_decision"
                  parent="bsg_hr_employees_decisions.menu_employee_root"
                  sequence="1"
                  action="employee_decision_action"
                  groups="bsg_hr.group_hr_specialist,bsg_hr.group_hr_manager"
        />
        <menuitem name="Decision to transfer an Employee"
                  id="menu_employee_transfer_decision"
                  parent="bsg_hr_employees_decisions.menu_decisions_root"
                  sequence="2"
                  action="employee_transfer_action"
                  groups="bsg_hr_employees_decisions.employees_decisions_transfer_group"/>
        <menuitem name="Decision to assign an Employee"
                  id="menu_employee_assign_decision"
                  parent="bsg_hr_employees_decisions.menu_decisions_root"
                  sequence="3"
                  action="employee_assign_action" groups="bsg_hr_employees_decisions.employees_decisions_assign_group"/>
        <menuitem name="To Approve Decisions"
                  id="menu_manager_approve_decision"
                  parent="bsg_hr_employees_decisions.menu_decisions_reporting_root"
                  sequence="1"
                  action="manager_approve_action"
                  groups="bsg_hr_employees_decisions.group_employees_decisions_by_manager"/>
    </data>
</odoo>