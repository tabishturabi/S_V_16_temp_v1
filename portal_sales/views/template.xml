                                                        <option value="">..From..</option>
                                                        <t t-foreach="loc_from_ids" t-as="loc_from">
                                                            <option t-att-value="'%s' % (loc_from.id)" t-esc="loc_from.route_waypoint_name" t-att-return_branch_type="loc_from.branch_type"
