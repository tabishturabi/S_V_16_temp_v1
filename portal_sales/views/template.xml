                                                        <label class="col-form-label"  for="receiver_default">Same as Owner ?</label>
                                                    </div>





                                                    <div t-attf-class="form-group col-xl-6">
                                                        <label class="col-form-label"  for="receiver_name">Receiver Name</label>
                                                        <input type="text" t-attf-class="form-control" name="receiver_name" required="required"/>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>

                                                    <div t-attf-class="form-group #{error.get('receiver_id_type') and 'o_has_error' or ''} col-xl-6">
                                                        <label class="col-form-label" for="receiver_id_type">Receiver ID Type</label>
                                                        <select name="receiver_id_type" t-attf-class="form-control #{error.get('receiver_id_type') and 'is-invalid' or ''}" required="required">
                                                            <option value="">..Receiver ID Type..</option>
                                                            <t t-foreach="sender_id_type" t-as="id_type">
                                                                <option t-att-value="'%s' % (id_type[0])" t-esc="id_type[1]" required="required"/>
                                                            </t>
                                                        </select>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>

                                                    <div t-attf-class="form-group #{error.get('receiver_type') and 'o_has_error' or ''} col-xl-6">
                                                        <label class="col-form-label" for="receiver_type">Receiver Type</label>
                                                        <select name="receiver_type" t-attf-class="form-control #{error.get('receiver_type') and 'is-invalid' or ''}" required="required">
                                                            <option value="">..Receiver Type..</option>
                                                            <t t-foreach="sender_type" t-as="type">
                                                                <option t-att-value="'%s' % (type[0])" t-esc="type[1]" />
                                                            </t>
                                                        </select>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>

                                                    <div t-attf-class="form-group col-xl-6">
                                                        <label class="col-form-label"  for="receiver_id_card_no">Receiver ID Card Number</label>
                                                        <input type="text" t-attf-class="form-control" name="receiver_id_card_no" required="required"/>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>

                                                    </div>

                                                    <div t-attf-class="form-group #{error.get('receiver_nationality') and 'o_has_error' or ''} col-xl-6">
                                                        <label class="col-form-label" for="receiver_nationality">Receiver Nationality</label>
                                                        <select name="receiver_nationality" t-attf-class="form-control #{error.get('receiver_nationality') and 'is-invalid' or ''}" required="required">
                                                            <option value="">..Receiver Nationality..</option>
                                                            <t t-foreach="nationality_ids" t-as="nation_id">
                                                                <option t-att-value="'%s' % (nation_id.id)" t-esc="nation_id.name" required="required" />
                                                            </t>
                                                        </select>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>
                                                    <div t-attf-class="form-group col-xl-6">
                                                        <label class="col-form-label"  for="receiver_visa_no">Receiver Visa Number</label>
                                                        <input type="text" t-attf-class="form-control" name="receiver_visa_no"  />
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>
                                                    <div t-attf-class="form-group col-xl-6">
                                                        <label class="col-form-label"  for="receiver_mob_no">Receiver Mobile Number</label>
                                                        <input type="number" t-attf-class="form-control" name="receiver_mob_no" required="required"/>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>
                                                    <div t-attf-class="form-group col-xl-6">
                                                        <label class="col-form-label"  for="no_of_copy">No of Copy</label>
                                                        <input type="number" t-attf-class="form-control" name="no_of_copy" />
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <br />

                                    <div t-attf-class="form-group col-xl-12">
                                        <input type="text" t-attf-class="form-control" name="note" placeholder="Note....."/>
                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                    </div>

                                    <div class="clearfix">
                                        <button type="submit"  id="property_submit_form" class="btn btn-primary float-right mb32">
                                            Confirm
                                            <span class="fa fa-long-arrow-right" />
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </t>
                </div>

            </div>
        </t>
    </template>
    <template id="vechicle_shipment_sale_order_status">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Sale Order</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-if='order'>
                        <span id="o_website_form_result" class="text-success ml8">
                            <i class="fa fa-check mr4" role="img" aria-label="Success" title="Success"/>The Order Is Successfully Created , Order Number : <b><t t-esc="order.name" /></b>
                        </span>
                    </t>
                    <t t-else=''>
                        <span id="o_website_form_result" class="text-danger ml8">
                            <i class="fa fa-close mr4" role="img" aria-label="Error" title="Error"/>An error has occured, the form has not been sent.
                        </span>
                    </t>

                </div>
            </div>

        </t>
    </template>


