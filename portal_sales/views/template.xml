    <template id="vechicle_shipment_sale">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Sale Order</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-if="request_type == 'coorperate' and not contract_ids">
                        <center>
                            <h3><p>Sorry You Have No Contract,Please Contact Us To Make Contract</p></h3>
                        </center>
                    </t>
                    <t t-else="">
                        <form action="/sale_coorperate_order_create/" class="s_website_form js_attributes_custom" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="default_payment_method_id" t-att-value="default_payment_method_id" />
                            <input type="hidden" name="default_country" t-att-value="default_country" />
                            <div class="row o_portal_cargo_sale_order_details">
                                <div class="col-lg-12">
                                    <div class="row" style="    margin-left: auto;
                                                margin-right: auto;">
                                        <div class="col-xl-12" style="margin-top: 5px;">
                                            <div class="row"
                                                 style="background-color: #FFFFFF;
                                                        background-clip: border-box;
                                                        border: 1px solid rgba(0, 0, 0, 0.125);
                                                        border-radius: 0.375rem;">
                                                <div t-attf-class="form-group col-xl-12"
                                                     style="padding: 0.75rem 1.25rem;text-align: center;
                                                            margin-bottom: 0;
                                                            background-color: rgba(0, 0, 0, 0.03);
                                                            border-bottom: 1px solid rgba(0, 0, 0, 0.125);color: green !important;">
                                                    <label class="col-form-label">Shipment Information</label>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div t-if="error_message" class="alert alert-danger" role="alert">
                                                        <t t-foreach="error_message" t-as="err"><t t-esc="err"/><br /></t>
                                                    </div>
                                                </div>

                                                <div t-attf-class="form-group col-xl-6">
                                                    <p><label class="col-form-label">Customer : </label> <t t-esc="customer.name" /></p>
                                                    <input type="hidden" name="customer" t-att-value="customer.id" />
                                                    <input type="hidden" name="customer_price_list" t-att-value="customer.property_product_pricelist.id" />
                                                </div>
                                                <div t-attf-class="form-group col-xl-6">
                                                    <p><label class="col-form-label">Customer Type : </label> <t t-esc="partner_type.name" /></p>
                                                    <input type="hidden" name="partner_types" t-att-value="partner_type.id"  />
                                                </div>

                                                <!--div t-attf-class="form-group col-xl-6">
                                                    <p><label class="col-form-label">Payment Method : </label> <t t-esc="payment_method_id.payment_method_name" /></p>
                                                </div-->

                                                <t t-if="request_type == 'coorperate'">
                                                    <div t-attf-class="form-group #{error.get('contract') and 'o_has_error' or ''} col-xl-12">
                                                        <label class="col-form-label" for="contract">Contract</label>
                                                        <select name="customer_contract" t-attf-class="form-control #{error.get('contract') and 'is-invalid' or ''}" required="required">
                                                            <option value="">...Contract...</option>
                                                            <t t-foreach="contract_ids" t-as="contract">
                                                                <option t-att-value="'%s' % (contract.id)" t-esc="contract.contract_name" t-att-selected="contract_set == str(contract.id)"/>
                                                            </t>
                                                        </select>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                    </div>
                                                </t>

                                                <!--div t-attf-class="form-group #{error.get('cargo_sale_type') and 'o_has_error' or ''} col-xl-12">
                                                        <label class="col-form-label" for="cargo_sale_type">Order Type</label>
                                                        <select name="cargo_sale_type" t-attf-class="form-control #{error.get('cargo_sale_type') and 'is-invalid' or ''}" required="required">
                                                            <option value="">...Type...</option>
                                                            <t t-foreach="cargo_sale_types" t-as="order_type">
                                                                <option t-att-value="'%s' % (order_type[0])" t-esc="order_type[1]" />
                                                            </t>
                                                        </select>
                                                        <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                </div-->

                                                <div style="display:none;" t-attf-class="form-group #{error.get('payment_method') and 'o_has_error' or ''} col-xl-6">
                                                    <label class="col-form-label" for="payment_method">Payment Method</label>
                                                    <select name="payment_method" t-attf-class="form-control #{error.get('payment_method') and 'is-invalid' or ''}" required="required" >
                                                        <t t-foreach="payment_method_id" t-as="method_id">
                                                            <option t-att-value="'%s' % (method_id.id)" t-esc="method_id.payment_method_name" t-att-selected="str(method_id.id) == str(default_payment_method_id)"/>
                                                        </t>
                                                    </select>
                                                    <div class="alert alert-danger" role="alert" style="display:none;"></div>
                                                </div>

                                                <div t-attf-class="form-group col-xl-6 form-field o_website_form_custom">
                                                    <label class="col-form-label">Shipment Date</label>
                                                    <div class="o_website_form_datetime input-group date" id="datetimepicker4" data-target-input="nearest">
                                                        <input type="text" id="shipment_date" class="form-control datetimepicker-input o_website_form_input" data-target="#datetimepicker4" name="shipment_date" required="required"/>
